{
    "manifest_version": 3,
    "name": "Tech debt/improvment blance",
    "version": "1.0",
    "description": "Displays the techdebt/tech improvements percentage",
    "background": {
        "service_worker": "scripts/background.js"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://dashboards.plandek.com/for/secret-escapes/data/*/dashboards/*"
            ],
            "match_about_blank": true,
            "css": [
                "css/styles.css"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ]
}